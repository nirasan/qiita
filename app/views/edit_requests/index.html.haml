%h1 Listing edit_requests

%table.table.table-striped
  %thead
    %tr
      %th User
      %th Title
      %th
      %th
      %th

  %tbody
    - @edit_requests.each do |edit_request|
      %tr
        %td= link_to edit_request.user.name, user_path(edit_request.user)
        %td= link_to edit_request.title, entry_edit_request_path(@entry, edit_request)
        %td= link_to 'Edit', edit_entry_edit_request_path(@entry, edit_request)
        %td= link_to 'Destroy', entry_edit_request_path(@entry, edit_request), :method => :delete, :data => { :confirm => '削除しますか？' }

%br

= link_to 'New Edit request', new_entry_edit_request_path(@entry)
