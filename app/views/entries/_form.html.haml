= simple_form_for(@entry) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :tag_string
    = f.input :body, as: :text, input_html: {rows: 20}

  .form-actions
    = f.button :submit

%br
%br

.panel.panel-default
  .panel-heading
    %h4
      プレビュー
      .btn-group.pull-right
        %button.btn.btn-primary{type:'button', id:'preview-button'} 更新
      = form_tag preview_entries_path, id: 'preview-form', remote: true do
        = hidden_field_tag 'body', '', id: 'preview-body'
  .panel-body
    #preview
